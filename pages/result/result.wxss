/* pages/result/result.wxss */
@import "/pages/book-item/book-item.wxss";

.order-container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 70rpx;
  background-color: white;
  border-top: 1px solid #f2f2f2;
}

.title{
  line-height: 70rpx;
  font-size: 25rpx;
  width: 130rpx;
  text-align: center;
}

.picker-view {
  flex: 1;
  display: flex;
  justify-content: space-around;
}

.picker-view picker{
  height: 50rpx;
  width: 150rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  margin-top: 10rpx;
  background-color: #f2f2f2;
  border-radius: 15rpx;
}

.refresh {
 height: 50rpx;
 width: 100rpx;
 margin: 10rpx 10rpx 0 10rpx;
 border: 1px solid #405f80;
 border-radius: 15rpx;
 display: flex;
 justify-content: center;
}

.refresh text {
  line-height: 50rpx;
  font-size: 25rpx;
  color: #405f80;
}

.more-info-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.95;
  overflow: hidden;
  z-index: 9000;
  background-color: #f2f2f2;

}

.more-info-view .info-text{
  margin: 60rpx 30rpx auto 30rpx;
}

page {
  height: 100%;
  background-color: #f2f2f2;
}