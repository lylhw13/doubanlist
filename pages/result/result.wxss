/* pages/result/result.wxss */
@import "/pages/book-item/book-item.wxss";

.order-container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: ghostwhite;
  height: 50rpx;
}

.order-container picker{
  line-height: 50rpx;
  border-radius: 3rpx;
  font-size: 25rpx;
}

.order-container text{
  line-height: 50rpx;
  font-size: 25rpx;
}

.more-info-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.95;
  overflow: hidden;
  z-index: 9000;
  background-color: #f2f2f2;

}

.more-info-view .info-text{
  margin: 60rpx 30rpx auto 30rpx;
}