/* pages/search/search.wxss */
@import "/pages/search/button-template/button-template.wxss";

.whole-container {
  display: flex;
  flex-direction: column;
}

.switch-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #d1d1d1;
}

.switch-view text {
  font-size: 36rpx;
  margin: auto auto auto 20rpx;
  line-height: 40rpx;
}

/*search*/

.search-view {
  display: flex;
  flex-direction: row;
  width: 80%;
  margin: 50rpx auto 0 auto;
}

.search-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: white;
  height: 80rpx;
  width: 100%;
  border: 1px solid #405f80;
  border-radius: 10rpx;
}

.search-img {
  margin: auto 20rpx auto 20rpx;
  /* justify-content: center; */
}

.search-container input {
  height: 100%;
  width: 100%;
  /* width: 600rpx; */
  margin-left: 20rpx;
  font-size: 28rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.xx-img {
  margin: auto 20rpx auto 20rpx;
  height: 28rpx;
  width: 28rpx;
}

/* advance view */

.adv-label {
  font-size: 36rpx;
  line-height: 60rpx;
}

/* 搜索范围 */

.adv-item {
  display: flex;
  flex-direction: row;
  margin: 60rpx 20rpx 0 20rpx;
  background-color: white;
  height: 90rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
}

.adv-label {
  line-height: 90rpx;
  width: 135rpx; /*five character*/
  border-right: 2rpx solid #ddd;
  padding-right: 10rpx;
  font-size: 30rpx;
}

.adv-range-content {
  flex: 1;
  display: flex;
  justify-content: space-around;
}

.adv-range-tag-view {
  margin: 15rpx 10rpx auto 10rpx;
}

/* 评分 */
.adv-rating-input-view {
  display: flex;
  flex-direction: row;
  width: 80%;
  justify-content: space-around;
}

.adv-item picker {
  background-color: #d1d1d1;
  height: 50rpx;
  width: 100rpx;
}

/* 日期 */
.adv-date-picker-view {
  display: flex;
  flex-direction: row;
  width: 80%;
  justify-content: space-around;
}

.adv-date picker {
  background-color: #d1d1d1;
  width: 100rpx;
}

/* 评价人数 */
.adv-item input {
  width: 150rpx;
  /* width: 600rpx; */
  border-bottom: 1px solid #405f80; 
  text-align: center;
  height: 50rpx;
  margin-top: 20rpx;
}

.split-label {
  line-height: 90rpx;
}

.adv-people-input-view {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}

.adv-people .placeholder {
  font-size: 28px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

/* 搜索按钮 */
.search-button {
  width: 50%;
  margin-top: 50rpx;
}

page {
  height: 100%;
  background-color: #f2f2f2;
}
